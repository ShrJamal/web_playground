{
  "name": "web_playground",
  "description": "Playground template to play with Vanilla Web",
  "version": "0.0.1",
  "author": "Jamal .S | https://shrjamal.com",
  "type": "module",
  "engines": {
    "node": ">=18.18"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "tsc && vite build && vite preview",
    "fmt": "biome check .",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@tailwindcss/vite": "^4.0.0-alpha.20",
    "tailwindcss": "^4.0.0-alpha.20",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "simple-git-hooks": {
    "pre-commit": "biome check --staged --no-errors-on-unmatched"
  }
}
