{
  "name": "web_playground",
  "description": "Playground template to play with Vanilla Web",
  "version": "0.0.1",
  "author": "Jamal .S | https://shrjamal.com",
  "type": "module",
  "engines": {
    "node": ">=18.18"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "tsc && vite build && vite preview",
    "coverage": "vitest run --coverage",
    "format": "biome format . --write",
    "lint": "biome lint .",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.9"
  }
}
