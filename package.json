{
  "name": "web_playground",
  "description": "Playground template to play with Vanilla Web",
  "version": "0.0.1",
  "author": "Jamal .S | https://shrjamal.com",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "tsc && vite build && vite preview",
    "fmt": "biome check .",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@tailwindcss/vite": "^4.1.17",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "simple-git-hooks": {
    "pre-commit": "biome check --staged --no-errors-on-unmatched"
  }
}
